{
  "name": "vscode-mcp-j",
  "displayName": "MCP-J Secure Runtime",
  "description": "Secure MCP runtime integration for VSCode",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "contributes": {
    "configuration": {
      "title": "MCP-J",
      "properties": {
        "mcp-j.enginePath": {
          "type": "string",
          "default": "${extensionPath}/bin/mcp-j-cli",
          "description": "Path to the mcp-j-cli binary."
        },
        "mcp-j.profilesPath": {
          "type": "string",
          "default": "${workspaceFolder}/.mcp-j/profiles",
          "description": "Directory containing sandbox profile manifests (.json)."
        },
        "mcp-j.defaultProfile": {
          "type": "string",
          "default": "generic.json",
          "description": "Default sandbox profile to use."
        },
        "mcp-j.logLevel": {
          "type": "string",
          "enum": [
            "info",
            "debug",
            "trace"
          ],
          "default": "info",
          "description": "Log level for the isolation engine."
        },
        "mcp-j.autoEphemeral": {
          "type": "boolean",
          "default": true,
          "description": "Enable volatile overlay filesystem (ephemeral state)."
        },
        "mcp-j.autoConfigureOnOpen": {
          "type": "boolean",
          "default": true,
          "description": "Automatically prompt to configure MCP-J if no profile is found."
        }
      }
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "mcp-j-container",
          "title": "MCP-J Security",
          "icon": "resources/shield.svg"
        }
      ]
    },
    "views": {
      "mcp-j-container": [
        {
          "id": "mcp-j-security",
          "name": "Security Terminal",
          "type": "webview"
        }
      ]
    },
    "jsonValidation": [
      {
        "fileMatch": ".mcp-j/profiles/*.json",
        "url": "./resources/manifest.schema.json"
      }
    ],
    "chatParticipants": [
      {
        "id": "mcp-j.securityBot",
        "fullName": "MCP-J Sentinel",
        "name": "mcp-j",
        "description": "Query kernel traps and security boundaries.",
        "isSticky": true,
        "welcomeMessage": "Welcome! I can help you audit security events or configure your workspace. [Auto-Configure](command:mcp-j.autoConfigure)",
        "commands": [
          {
            "name": "audit",
            "description": "Analyze the latest kernel trap."
          },
          {
            "name": "configure",
            "description": "Generate a security profile for this workspace."
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "mcp-j.autoConfigure",
        "title": "MCP-J: Auto-Configure Workspace",
        "category": "MCP-J"
      }
    ]
  },
  "main": "./out/main.js",
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.33",
    "@types/vscode": "1.90.0",
    "esbuild": "^0.27.3",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Necrotyk/MCP-J.git"
  },
  "license": "MIT",
  "publisher": "dystopi-research"
}