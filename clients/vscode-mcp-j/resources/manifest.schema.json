{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MCP-J Sandbox Profile",
    "description": "Configuration for MCP-J secure agent runtime",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "max_memory_mb": {
            "type": "integer",
            "minimum": 16,
            "description": "Maximum memory allowance in megabytes."
        },
        "max_cpu_quota_pct": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "description": "CPU quota percentage (1-100)."
        },
        "allowed_egress_ips": {
            "type": "array",
            "description": "List of IPv4/IPv6 addresses allowed for outbound connections.",
            "items": {
                "type": "string",
                "format": "ipv4"
            }
        },
        "readonly_mounts": {
            "type": "array",
            "description": "List of directories to mount read-only into the sandbox.",
            "items": {
                "type": "string"
            }
        },
        "env_vars": {
            "type": "object",
            "description": "Environment variables to inject into the process.",
            "additionalProperties": {
                "type": "string"
            }
        }
    },
    "required": []
}